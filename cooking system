Rezept = "Crêpe" --Hier ein Rezept aussuchen: Waffeln, Pfannkuchen, Crêpe/Crepe--
Personen = 5 --Hier die Anzahl an Personen eintragen--

if Rezept=="Pfannkuchen" then
    Zutaten = {" Ei/er",
        "ml Milch",
